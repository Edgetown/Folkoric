    // Update the DOM with the current scene.
    function displayScene(sceneKey) {
      const scene = scenes[sceneKey];
      const sceneDiv = document.getElementById("scene");
      const optionsDiv = document.getElementById("options");
      
      // Insert scene text with proper line breaks.
      sceneDiv.innerHTML = `<p>${scene.text.replace(/\n/g, '<br/>')}</p>`;
      optionsDiv.innerHTML = "";
      
      // If no options are left, present a restart button.
      if (!scene.options || scene.options.length === 0) {
        const restartBtn = document.createElement("button");
        restartBtn.textContent = "모험 다시 시작하기";
        restartBtn.className = "restart";
        restartBtn.onclick = () => displayScene("start");
        optionsDiv.appendChild(restartBtn);
        return;
      }
      
      // Create buttons for available options.
      scene.options.forEach(option => {
        const btn = document.createElement("button");
        btn.textContent = option.text;
        btn.onclick = () => displayScene(option.next);
        optionsDiv.appendChild(btn);
      });
    }
    
    // Begin the adventure.
    displayScene("start");
  </script>
</body>
</html>
